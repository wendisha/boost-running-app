<div class="container-fluid">
  <div class="container">
    <h2>Another run, another donation.</h2>
      <div>
      Charity: <%= link_to @run.charity.name, charity_path(@run.charity.id) %><br>
      Distance (miles): <%= @run.distance %><br>
      Duration (mins): <%= @run.duration %><br>
      Location: <%= @run.location %><br>

      <!-- Links showed on run's show using helper methods -->
      <%= user_edit_run 'Edit', edit_run_path(@run.id)%> | <%= user_delete_run 'Delete', run_path(@run), method: :delete %><br>
    
    </div>
  </div>
</div>
