<!DOCTYPE html>
<html>
  <head>
    <title>Boost - Run to Raise</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


  <% if logged_in? %>
    <nav class="navbar navbar-expand-lg navbar-light bg-light sticky-top"style="border-bottom: 1px solid gray;">
      <a class="navbar-brand" href="/">Boost</a>
      <span class="navbar-text">
          Run to Raise. Donations made for every mile you run.
        </span>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarText">
        <ul class="navbar-nav ml-auto">
          <li class="nav-link"><%= link_to "Add a Run", new_run_path %></li>
          <li class="nav-link"><%= link_to "Charities", charities_path %></li>
          <li class="nav-link"><%= link_to current_user.username.capitalize, user_path(current_user.id) %></li>
          <li class="nav-link"><%= link_to "Log Out", logout_path, method: :delete %></li>
        </ul>
      </div>
    </nav>
  <% end %>

  <body>
    <main>
      <%= yield %>
    </main>
  </body>
</html>
